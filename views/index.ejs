<!DOCTYPE html>
<html lang="en" xmlns="http://www.w3.org/1999/html">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>ToDo</title>
    <link href="https://fonts.googleapis.com/css?family=Roboto" rel="stylesheet">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="css/reset.css" />
    <link rel="stylesheet" type="text/css" href="css/main.css" />

</head>
<body>
<div class="main">
    <div class="top-bar">
        <button class="hamburger hamburger--spin toggler" id="sidebar-open-close">
        <span class="hamburger-box">
            <span class="hamburger-inner" id="hamburger-inner"></span>
        </span>
        </button>
    </div>
    <div class="items-active" id="items-all">
        <% for (var i = 0; i < result.length; i++){ %>
        <div class="todo-item todo-item-active">
            <div class="todo-item-title"><%= result[i].title %></div>
            <div class="todo-item-text">
                <%= result[i].content %>
            </div>
            <div class="actions-time">
                <div class="time">
                    <a href="/item/<%= result[i].title %>">Read More</a>
                </div>
                <ul class="done-remove-btn">
                    <li id="complet-btn" onclick="moveToCompleted(this)"><i class="material-icons">&#xE876;</i></li>
                    <li id="delete-btn"><a href="/edit/<%= result[i]._id %>"><i class="material-icons">&#xE22B;</i></a></li>
                    <li id="delete-btn"><a href="/remove/<%= result[i]._id %>"><i class="material-icons">&#xE872;</i></a></li>
                </ul>
            </div>
        </div>
        <% } %>
    <div class="sidebar sidebar-close" id="sidebar">
        <div class="sidebar-header"></div>
        <ul>
            <li id="showAll"><i class="material-icons">assignment</i>All</li>
            <li id="showActive"><i class="material-icons">assignment_late</i>Active</li>
            <li id="showCompleted"><i class="material-icons">assignment_turned_in</i>Completed</li>
            <li id="clearAll"><i class="material-icons">delete_forever</i>Clear All</li>
        </ul>
    </div>
    <a href="/write" id="createNew"><i class="material-icons">&#xE150;</i></a>
</div>



<script src="js/main.js"></script>
</body>
</html>